// Prisma schema for OTW Production Build (Neon Postgres)
// Generator - Prisma 7 format

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

// Datasource - URL configured in prisma.config.ts
datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  CUSTOMER
  DRIVER
  ADMIN
  FRANCHISE
}

enum RequestStatus {
  DRAFT
  SUBMITTED
  ASSIGNED
  PICKED_UP
  DELIVERED
  COMPLETED
  CANCELLED
}

enum ServiceType {
  FOOD
  STORE
  FRAGILE
  CONCIERGE
}

enum MembershipStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  INACTIVE
}

enum DriverEarningStatus {
  pending
  available
  paid
}

enum DriverPayoutStatus {
  processing
  paid
  failed
}

enum PayoutMethod {
  stripe
  manual
}

// Models
model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  role              Role      @default(CUSTOMER)
  clerkId           String    @unique
  dob               DateTime?
  termsAcceptedAt   DateTime?
  privacyAcceptedAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  driverProfile      DriverProfile?
  customerProfile    CustomerProfile?
  requests           Request[]
  membership         MembershipSubscription?
  supportTickets     SupportTicket[]
  nIPLedger          NIPLedger[]
  driverEarnings     DriverEarnings[]
  driverPayouts      DriverPayout[]
  nipTransactions    NipTransaction[]
  franchiseProfile   FranchiseProfile?
  driverApplications DriverApplication[]
}

model DriverApplication {
  id           String   @id @default(cuid())
  userId       String?
  email        String
  fullName     String
  phone        String
  city         String
  vehicleType  String
  availability String
  message      String?
  status       String   @default("NEW") // NEW, REVIEWING, APPROVED, REJECTED
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

model DriverProfile {
  id                String           @id @default(cuid())
  userId            String           @unique
  rating            Float?           @default(0)
  status            String           @default("OFFLINE")
  zoneId            String?
  agreementSignedAt DateTime?
  user              User             @relation(fields: [userId], references: [id])
  zone              Zone?            @relation(fields: [zoneId], references: [id])
  requests          Request[]
  locations         DriverLocation[]
}

model CustomerProfile {
  id             String  @id @default(cuid())
  userId         String  @unique
  phone          String?
  defaultPickup  String?
  defaultDropoff String?
  user           User    @relation(fields: [userId], references: [id])
}

model City {
  id       String    @id @default(cuid())
  name     String    @unique
  zones    Zone[]
  requests Request[]
}

model Zone {
  id       String          @id @default(cuid())
  name     String
  cityId   String
  city     City            @relation(fields: [cityId], references: [id])
  drivers  DriverProfile[]
  requests Request[]
}

model Request {
  id               String        @id @default(cuid())
  customerId       String
  assignedDriverId String?
  cityId           String?
  zoneId           String?
  pickup           String
  dropoff          String
  serviceType      ServiceType
  status           RequestStatus @default(DRAFT)
  notes            String?
  milesEstimate    Int?
  costEstimate     Int?
  lastKnownLat     Float?
  lastKnownLng     Float?
  lastKnownAt      DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  customer       User           @relation(fields: [customerId], references: [id])
  assignedDriver DriverProfile? @relation(fields: [assignedDriverId], references: [id])
  events         RequestEvent[]
  city           City?          @relation(fields: [cityId], references: [id])
  zone           Zone?          @relation(fields: [zoneId], references: [id])

  @@index([customerId])
  @@index([status])
}

model RequestEvent {
  id        String   @id @default(cuid())
  requestId String
  type      String
  message   String?
  timestamp DateTime @default(now())
  request   Request  @relation(fields: [requestId], references: [id])
}

model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  message   String?
  status    String   @default("OPEN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MembershipPlan {
  id            String                   @id @default(cuid())
  name          String                   @unique
  description   String?
  stripePriceId String?                  @unique
  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt
  subscriptions MembershipSubscription[]
}

model MembershipSubscription {
  id               String           @id @default(cuid())
  userId           String           @unique
  planId           String
  status           MembershipStatus @default(ACTIVE)
  stripeCustomerId String?
  stripeSubId      String?
  stripePriceId    String?
  renewsAt         DateTime?
  currentPeriodEnd DateTime?

  user User           @relation(fields: [userId], references: [id])
  plan MembershipPlan @relation(fields: [planId], references: [id])
}

model NIPLedger {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  type      String
  requestId String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model DriverEarnings {
  id          String              @id @default(cuid())
  driverId    String
  amount      Int
  amountCents Int?
  status      DriverEarningStatus @default(pending)
  requestId   String?
  createdAt   DateTime            @default(now())
  user        User                @relation(fields: [driverId], references: [id])
}

model DriverPayout {
  id           String             @id @default(cuid())
  driverId     String
  totalCents   Int
  status       DriverPayoutStatus @default(processing)
  payoutMethod PayoutMethod       @default(manual)
  createdAt    DateTime           @default(now())
  user         User               @relation(fields: [driverId], references: [id])
}

model NipTransaction {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  reason    String
  refId     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model FranchiseProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model DriverLocation {
  id        String        @id @default(cuid())
  driverId  String
  lat       Float
  lng       Float
  timestamp DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  driver    DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId, timestamp])
}
