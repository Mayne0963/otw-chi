// Prisma schema for OTW Production Build (Neon Postgres)
// Generator - Prisma 7 format

generator client {
  provider = "prisma-client-js"
}

// Datasource - URL configured in prisma.config.ts
datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  CUSTOMER
  DRIVER
  ADMIN
  FRANCHISE
}

enum FounderEnergyLevel {
  EASY
  ANNOYING
  EXHAUSTING
}

enum DeliveryRequestStatus {
  DRAFT
  REQUESTED
  ASSIGNED
  PICKED_UP
  EN_ROUTE
  DELIVERED
  CANCELED
}

enum ServiceType {
  FOOD
  STORE
  FRAGILE
  CONCIERGE
  RIDE
}

enum MembershipStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  INACTIVE
}

enum DriverEarningStatus {
  pending
  available
  paid
}

enum DriverPayoutStatus {
  processing
  paid
  failed
}

enum PayoutMethod {
  stripe
  manual
}

enum DriverApplicationStatus {
  PENDING
  APPROVED
  WAITLIST
  DENIED
}

enum DriverCandidateProfile {
  RETIRED_PROFESSIONAL
  VETERAN
  EDUCATOR
  HEALTHCARE
  CHURCH_ADMIN
  POSTAL_WORKER
  GOVERNMENT_EMPLOYEE
  OTHER
}

enum FranchiseApplicationStatus {
  PENDING
  APPROVED
  DENIED
}

enum ServiceMilesTransactionType {
  ADD_MONTHLY
  DEDUCT_REQUEST
  ADJUST
  EXPIRE
  ROLL_IN
}

enum DriverTier {
  PROBATION
  STANDARD
  ELITE
  CONCIERGE
}

enum ReceiptStatus {
  APPROVED
  FLAGGED
  REJECTED
  PENDING
}

// Models
model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  role              Role      @default(CUSTOMER)
  neonAuthId        String    @unique
  dob               DateTime?
  termsAcceptedAt   DateTime?
  privacyAcceptedAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  driverProfile      DriverProfile?
  customerProfile    CustomerProfile?
  membership         MembershipSubscription?
  supportTickets     SupportTicket[]
  nIPLedger          NIPLedger[]
  driverEarnings     DriverEarnings[]
  driverPayouts      DriverPayout[]
  nipTransactions    NipTransaction[]
  paymentTransactions PaymentTransaction[]
  franchiseProfile   FranchiseProfile?
  driverApplications DriverApplication[]
  deliveryRequests   DeliveryRequest[]
  promoRedemptions   PromoRedemption[]
  franchiseApplications FranchiseApplication[]
  contactMessages    ContactMessage[]
  serviceMilesWallet ServiceMilesWallet?
  founderServiceLogs FounderServiceLog[]
}

model DriverApplication {
  id           String   @id @default(cuid())
  userId       String?
  email        String
  fullName     String
  phone        String
  city         String
  vehicleType  String
  availability String?
  message      String?
  notes        String?
  status       DriverApplicationStatus   @default(PENDING)
  candidateProfile DriverCandidateProfile?
  patienceScore Int?
  communicationScore Int?
  reliabilityScore Int?
  attitudeScore Int?
  alignmentScore Int?
  minScore Int?
  interviewNotes String?
  patienceAnswer String?
  customerCareAnswer String?
  instructionsAnswer String?
  whyOtwAnswer String?
  scoredAt DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User?    @relation(fields: [userId], references: [id])
}

model FranchiseApplication {
  id        String   @id @default(cuid())
  userId    String?
  fullName  String
  email     String
  cityZones String
  message   String?
  status    FranchiseApplicationStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model ContactMessage {
  id        String   @id @default(cuid())
  userId    String?
  email     String
  message   String
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model DriverProfile {
  id                String           @id @default(cuid())
  userId            String           @unique
  rating            Float?           @default(0)
  status            String           @default("OFFLINE")
  zoneId            String?
  agreementSignedAt DateTime?
  user              User             @relation(fields: [userId], references: [id])
  zone              Zone?            @relation(fields: [zoneId], references: [id])
  assignedDeliveryRequests DeliveryRequest[]
  locations         DriverLocation[]
  assignments       DriverAssignment[]
  locationPings     DriverLocationPing[]
  navigationSettings DriverNavigationSettings?
  telemetry         DriverTelemetry[]

  // New Extensions
  tierLevel       DriverTier      @default(PROBATION)
  hourlyRateCents Int             @default(0)
  bonusEnabled    Boolean         @default(false)
  bonus5StarCents Int             @default(0)
  performanceMetrics Json?
  timeLogs        DriverTimeLog[]
}

model CustomerProfile {
  id             String  @id @default(cuid())
  userId         String  @unique
  phone          String?
  defaultPickup  String?
  defaultDropoff String?
  user           User    @relation(fields: [userId], references: [id])
}

model City {
  id       String    @id @default(cuid())
  name     String    @unique
  zones    Zone[]
}

model Zone {
  id       String          @id @default(cuid())
  name     String
  cityId   String
  city     City            @relation(fields: [cityId], references: [id])
  drivers  DriverProfile[]
}



model DeliveryRequest {
  id               String                @id @default(cuid())
  userId           String
  assignedDriverId String?
  idempotencyKey   String?
  serviceType      ServiceType
  pickupAddress    String
  dropoffAddress   String
  notes            String?
  restaurantName      String?
  restaurantWebsite   String?
  receiptImageData    String?   @db.Text
  receiptVendor       String?
  receiptLocation     String?
  receiptItems        Json?
  receiptAuthenticityScore Float?
  receiptSubtotalCents Int?
  deliveryFeeCents    Int?
  deliveryFeePaid     Boolean   @default(false)
  deliveryCheckoutSessionId String?
  couponCode          String?
  discountCents       Int?
  tipCents            Int                 @default(0)
  receiptVerifiedAt   DateTime?
  status           DeliveryRequestStatus @default(REQUESTED)
  lastKnownLat     Float?
  lastKnownLng     Float?
  lastKnownAt      DateTime?
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  user           User           @relation(fields: [userId], references: [id])
  assignedDriver DriverProfile? @relation(fields: [assignedDriverId], references: [id])
  assignments    DriverAssignment[]
  locationPings  DriverLocationPing[]

  // Service Miles & Logistics
  scheduledStart       DateTime?
  assignedAt           DateTime?
  arrivedAt            DateTime?
  completedAt          DateTime?
  estimatedMinutes     Int?
  waitMinutes          Int                 @default(10)
  actualWaitMinutes    Int?
  serviceMilesBase     Int?
  serviceMilesAdders   Int?
  serviceMilesDiscount Int?
  serviceMilesFinal    Int?
  quoteBreakdown       Json?
  customerRating       Int?
  complaintFlag        Boolean             @default(false)
  
  serviceMilesLedger   ServiceMilesLedger[]
  timeLogs             DriverTimeLog[]
  founderServiceLogs   FounderServiceLog[]
  receiptVerifications ReceiptVerification[]

  @@index([userId])
  @@index([status])
  @@unique([userId, idempotencyKey])
}

model PromoCode {
  id              String           @id @default(cuid())
  code            String           @unique
  description     String?
  percentOff      Int?
  amountOffCents  Int?
  active          Boolean          @default(true)
  startsAt        DateTime?
  endsAt          DateTime?
  maxRedemptions  Int?
  redemptions     Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  redemptionsLog  PromoRedemption[]
}

model PromoRedemption {
  id           String   @id @default(cuid())
  promoCodeId  String
  userId       String
  orderId      String?
  createdAt    DateTime @default(now())

  promoCode PromoCode @relation(fields: [promoCodeId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([promoCodeId, userId])
  @@index([userId])
}



model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  message   String?
  status    String   @default("OPEN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MembershipPlan {
  id            String                   @id @default(cuid())
  name          String                   @unique
  description   String?
  stripePriceId String?                  @unique

  monthlyServiceMiles Int      @default(0)
  rolloverCapMiles    Int      @default(0)
  advanceDiscountMax  Int      @default(0)
  priorityLevel       Int      @default(0)
  markupFree          Boolean  @default(false)
  cashAllowed         Boolean  @default(false)
  peerToPeerAllowed   Boolean  @default(false)
  allowedServiceTypes Json?

  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt
  subscriptions MembershipSubscription[]
}

model MembershipSubscription {
  id               String           @id @default(cuid())
  userId           String           @unique
  planId           String?
  status           MembershipStatus @default(ACTIVE)
  stripeCustomerId String?
  stripeSubId      String?
  stripePriceId    String?
  renewsAt         DateTime?
  currentPeriodEnd DateTime?

  user User           @relation(fields: [userId], references: [id])
  plan MembershipPlan? @relation(fields: [planId], references: [id])
}

model PaymentTransaction {
  id                   String   @id @default(cuid())
  userId               String
  amountCents          Int
  currency             String   @default("usd")
  status               String
  provider             String   @default("NATIVE")
  paymentMethodDisplay String?
  errorCode            String?
  errorMessage         String?
  orderId              String?
  metadata             Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([orderId])
}

model NIPLedger {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  type      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model DriverEarnings {
  id          String              @id @default(cuid())
  driverId    String
  amount      Int
  amountCents Int?
  tipCents    Int                 @default(0)
  status      DriverEarningStatus @default(pending)
  createdAt   DateTime            @default(now())
  user        User                @relation(fields: [driverId], references: [id])

  @@unique([driverId])
}

model DriverPayout {
  id           String             @id @default(cuid())
  driverId     String
  totalCents   Int
  status       DriverPayoutStatus @default(processing)
  payoutMethod PayoutMethod       @default(manual)
  createdAt    DateTime           @default(now())
  user         User               @relation(fields: [driverId], references: [id])
}

model NipTransaction {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  reason    String
  refId     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model FranchiseProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model DriverLocation {
  id        String        @id @default(cuid())
  driverId  String
  lat       Float
  lng       Float
  timestamp DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  driver    DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId, timestamp])
}

model DriverAssignment {
  id         String   @id @default(cuid())
  driverId   String
  deliveryRequestId String?
  assignedAt DateTime @default(now())
  
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])
  driver     DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId])
  @@index([deliveryRequestId])
}

model DriverLocationPing {
  id        String   @id @default(cuid())
  driverId  String
  deliveryRequestId String?
  lat       Float
  lng       Float
  createdAt DateTime @default(now())

  driver    DriverProfile @relation(fields: [driverId], references: [id])
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])

  @@index([driverId])
  @@index([deliveryRequestId])
}

model DriverNavigationSettings {
  id            String   @id @default(cuid())
  driverId      String   @unique
  voiceEnabled  Boolean  @default(true)
  voiceLocale   String   @default("en-US")
  voiceVolume   Float    @default(0.7)
  detailLevel   String   @default("standard")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  driver        DriverProfile @relation(fields: [driverId], references: [id])
}

model DriverTelemetry {
  id               String   @id @default(cuid())
  driverId         String
  deliveryRequestId String?
  lat              Float
  lng              Float
  speedMps         Float?
  heading          Float?
  accuracy         Float?
  altitude         Float?
  batteryLevel     Float?
  batteryCharging  Boolean?
  recordedAt       DateTime @default(now())

  driver           DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId, recordedAt])
  @@index([deliveryRequestId])
}

model ServiceMilesWallet {
  id                String               @id @default(cuid())
  userId            String               @unique
  balanceMiles      Int                  @default(0)
  rolloverBankMiles Int                  @default(0)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  user              User                 @relation(fields: [userId], references: [id])
  ledgerEntries     ServiceMilesLedger[]
}

model ServiceMilesLedger {
  id                String                      @id @default(cuid())
  walletId          String
  amount            Int
  transactionType   ServiceMilesTransactionType
  deliveryRequestId String?
  idempotencyKey    String?
  externalRef       String?                     @unique
  description       String?
  createdAt         DateTime                    @default(now())

  wallet          ServiceMilesWallet @relation(fields: [walletId], references: [id])
  deliveryRequest DeliveryRequest?   @relation(fields: [deliveryRequestId], references: [id])

  @@unique([walletId, idempotencyKey])
  @@index([walletId])
  @@index([deliveryRequestId])
}

model DriverTimeLog {
  id                String    @id @default(cuid())
  driverId          String
  deliveryRequestId String?
  startTime         DateTime // ARRIVED
  endTime           DateTime? // COMPLETE
  activeMinutes     Int       @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  driver          DriverProfile    @relation(fields: [driverId], references: [id])
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])

  @@index([driverId])
  @@index([deliveryRequestId])
}

model FounderServiceLog {
  id                String             @id @default(cuid())
  userId            String
  deliveryRequestId String?
  serviceType       ServiceType
  milesCharged      Int
  activeMinutes     Int
  energy            FounderEnergyLevel
  wouldDoAgain      Boolean
  notes             String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  user            User           @relation(fields: [userId], references: [id])
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])

  @@index([userId])
  @@index([createdAt])
  @@index([deliveryRequestId])
}

model ReceiptVerification {
  id              String   @id @default(cuid())
  userId          String
  deliveryRequestId String
  expectedVendor  String?
  merchantName    String?
  subtotalAmount  Decimal?
  taxAmount       Decimal?
  tipAmount       Decimal?
  totalAmount     Decimal?
  receiptDate     DateTime?
  currency        String?
  confidenceScore Float?
  imageHash       String   @unique
  riskScore       Int      @default(0)
  status          ReceiptStatus @default(PENDING)
  reasonCodes     String[] @default([])
  riskBreakdown   Json?
  rawResponse     Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  deliveryRequest DeliveryRequest @relation(fields: [deliveryRequestId], references: [id])

  @@index([userId])
  @@index([deliveryRequestId])
}
