// Prisma schema for OTW Production Build (Neon Postgres)
// Generator - Prisma 7 format

generator client {
  provider = "prisma-client-js"
}

// Datasource - URL configured in prisma.config.ts
datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  CUSTOMER
  DRIVER
  ADMIN
  FRANCHISE
}

enum RequestStatus {
  DRAFT
  SUBMITTED
  ASSIGNED
  PICKED_UP
  EN_ROUTE
  DELIVERED
  COMPLETED
  CANCELLED
}

enum DeliveryRequestStatus {
  DRAFT
  REQUESTED
  ASSIGNED
  PICKED_UP
  EN_ROUTE
  DELIVERED
  CANCELED
}

enum ServiceType {
  FOOD
  STORE
  FRAGILE
  CONCIERGE
  RIDE
}

enum MembershipStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  INACTIVE
}

enum DriverEarningStatus {
  pending
  available
  paid
}

enum DriverPayoutStatus {
  processing
  paid
  failed
}

enum PayoutMethod {
  stripe
  manual
}

enum DriverApplicationStatus {
  PENDING
  APPROVED
  DENIED
}

enum FranchiseApplicationStatus {
  PENDING
  APPROVED
  DENIED
}

// Models
model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  role              Role      @default(CUSTOMER)
  clerkId           String    @unique
  dob               DateTime?
  termsAcceptedAt   DateTime?
  privacyAcceptedAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  driverProfile      DriverProfile?
  customerProfile    CustomerProfile?
  requests           Request[]
  membership         MembershipSubscription?
  supportTickets     SupportTicket[]
  nIPLedger          NIPLedger[]
  driverEarnings     DriverEarnings[]
  driverPayouts      DriverPayout[]
  nipTransactions    NipTransaction[]
  paymentTransactions PaymentTransaction[]
  franchiseProfile   FranchiseProfile?
  driverApplications DriverApplication[]
  deliveryRequests   DeliveryRequest[]
  promoRedemptions   PromoRedemption[]
  franchiseApplications FranchiseApplication[]
  contactMessages    ContactMessage[]
}

model DriverApplication {
  id           String   @id @default(cuid())
  userId       String?
  email        String
  fullName     String
  phone        String
  city         String
  vehicleType  String
  availability String?
  message      String?
  notes        String?
  status       DriverApplicationStatus   @default(PENDING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User?    @relation(fields: [userId], references: [id])
}

model FranchiseApplication {
  id        String   @id @default(cuid())
  userId    String?
  fullName  String
  email     String
  cityZones String
  message   String?
  status    FranchiseApplicationStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model ContactMessage {
  id        String   @id @default(cuid())
  userId    String?
  email     String
  message   String
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model DriverProfile {
  id                String           @id @default(cuid())
  userId            String           @unique
  rating            Float?           @default(0)
  status            String           @default("OFFLINE")
  zoneId            String?
  agreementSignedAt DateTime?
  user              User             @relation(fields: [userId], references: [id])
  zone              Zone?            @relation(fields: [zoneId], references: [id])
  requests          Request[]
  assignedDeliveryRequests DeliveryRequest[]
  locations         DriverLocation[]
  assignments       DriverAssignment[]
  locationPings     DriverLocationPing[]
  navigationSettings DriverNavigationSettings?
  telemetry         DriverTelemetry[]
}

model CustomerProfile {
  id             String  @id @default(cuid())
  userId         String  @unique
  phone          String?
  defaultPickup  String?
  defaultDropoff String?
  user           User    @relation(fields: [userId], references: [id])
}

model City {
  id       String    @id @default(cuid())
  name     String    @unique
  zones    Zone[]
  requests Request[]
}

model Zone {
  id       String          @id @default(cuid())
  name     String
  cityId   String
  city     City            @relation(fields: [cityId], references: [id])
  drivers  DriverProfile[]
  requests Request[]
}

model Request {
  id               String        @id @default(cuid())
  customerId       String
  assignedDriverId String?
  cityId           String?
  zoneId           String?
  pickup           String
  dropoff          String
  serviceType      ServiceType
  status           RequestStatus @default(DRAFT)
  notes            String?
  milesEstimate    Int?
  costEstimate     Int?
  lastKnownLat     Float?
  lastKnownLng     Float?
  lastKnownAt      DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  customer       User           @relation(fields: [customerId], references: [id])
  assignedDriver DriverProfile? @relation(fields: [assignedDriverId], references: [id])
  events         RequestEvent[]
  city           City?          @relation(fields: [cityId], references: [id])
  zone           Zone?          @relation(fields: [zoneId], references: [id])
  assignments    DriverAssignment[]
  locationPings  DriverLocationPing[]

  @@index([customerId])
  @@index([status])
}

model DeliveryRequest {
  id               String                @id @default(cuid())
  userId           String
  assignedDriverId String?
  serviceType      ServiceType
  pickupAddress    String
  dropoffAddress   String
  notes            String?
  restaurantName      String?
  restaurantWebsite   String?
  receiptImageData    String?   @db.Text
  receiptVendor       String?
  receiptLocation     String?
  receiptItems        Json?
  receiptAuthenticityScore Float?
  receiptSubtotalCents Int?
  deliveryFeeCents    Int?
  deliveryFeePaid     Boolean   @default(false)
  deliveryCheckoutSessionId String?
  couponCode          String?
  discountCents       Int?
  receiptVerifiedAt   DateTime?
  status           DeliveryRequestStatus @default(REQUESTED)
  lastKnownLat     Float?
  lastKnownLng     Float?
  lastKnownAt      DateTime?
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  user           User           @relation(fields: [userId], references: [id])
  assignedDriver DriverProfile? @relation(fields: [assignedDriverId], references: [id])
  assignments    DriverAssignment[]
  locationPings  DriverLocationPing[]

  @@index([userId])
  @@index([status])
}

model PromoCode {
  id              String           @id @default(cuid())
  code            String           @unique
  description     String?
  percentOff      Int?
  amountOffCents  Int?
  active          Boolean          @default(true)
  startsAt        DateTime?
  endsAt          DateTime?
  maxRedemptions  Int?
  redemptions     Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  redemptionsLog  PromoRedemption[]
}

model PromoRedemption {
  id           String   @id @default(cuid())
  promoCodeId  String
  userId       String
  orderId      String?
  createdAt    DateTime @default(now())

  promoCode PromoCode @relation(fields: [promoCodeId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([promoCodeId, userId])
  @@index([userId])
}

model RequestEvent {
  id        String   @id @default(cuid())
  requestId String
  type      String
  message   String?
  timestamp DateTime @default(now())
  request   Request  @relation(fields: [requestId], references: [id])
}

model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  message   String?
  status    String   @default("OPEN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model MembershipPlan {
  id            String                   @id @default(cuid())
  name          String                   @unique
  description   String?
  stripePriceId String?                  @unique
  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt
  subscriptions MembershipSubscription[]
}

model MembershipSubscription {
  id               String           @id @default(cuid())
  userId           String           @unique
  planId           String?
  status           MembershipStatus @default(ACTIVE)
  stripeCustomerId String?
  stripeSubId      String?
  stripePriceId    String?
  renewsAt         DateTime?
  currentPeriodEnd DateTime?

  user User           @relation(fields: [userId], references: [id])
  plan MembershipPlan? @relation(fields: [planId], references: [id])
}

model PaymentTransaction {
  id                   String   @id @default(cuid())
  userId               String
  amountCents          Int
  currency             String   @default("usd")
  status               String
  provider             String   @default("NATIVE")
  paymentMethodDisplay String?
  errorCode            String?
  errorMessage         String?
  orderId              String?
  metadata             Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([orderId])
}

model NIPLedger {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  type      String
  requestId String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model DriverEarnings {
  id          String              @id @default(cuid())
  driverId    String
  amount      Int
  amountCents Int?
  status      DriverEarningStatus @default(pending)
  requestId   String?
  createdAt   DateTime            @default(now())
  user        User                @relation(fields: [driverId], references: [id])
}

model DriverPayout {
  id           String             @id @default(cuid())
  driverId     String
  totalCents   Int
  status       DriverPayoutStatus @default(processing)
  payoutMethod PayoutMethod       @default(manual)
  createdAt    DateTime           @default(now())
  user         User               @relation(fields: [driverId], references: [id])
}

model NipTransaction {
  id        String   @id @default(cuid())
  userId    String
  amount    Int
  reason    String
  refId     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model FranchiseProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model DriverLocation {
  id        String        @id @default(cuid())
  driverId  String
  lat       Float
  lng       Float
  timestamp DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  driver    DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId, timestamp])
}

model DriverAssignment {
  id         String   @id @default(cuid())
  requestId  String?
  driverId   String
  deliveryRequestId String?
  assignedAt DateTime @default(now())
  
  request    Request?      @relation(fields: [requestId], references: [id])
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])
  driver     DriverProfile @relation(fields: [driverId], references: [id])

  @@index([requestId])
  @@index([driverId])
  @@index([deliveryRequestId])
}

model DriverLocationPing {
  id        String   @id @default(cuid())
  driverId  String
  requestId String?
  deliveryRequestId String?
  lat       Float
  lng       Float
  createdAt DateTime @default(now())

  driver    DriverProfile @relation(fields: [driverId], references: [id])
  request   Request?      @relation(fields: [requestId], references: [id])
  deliveryRequest DeliveryRequest? @relation(fields: [deliveryRequestId], references: [id])

  @@index([driverId])
  @@index([requestId])
  @@index([deliveryRequestId])
}

model DriverNavigationSettings {
  id            String   @id @default(cuid())
  driverId      String   @unique
  voiceEnabled  Boolean  @default(true)
  voiceLocale   String   @default("en-US")
  voiceVolume   Float    @default(0.7)
  detailLevel   String   @default("standard")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  driver        DriverProfile @relation(fields: [driverId], references: [id])
}

model DriverTelemetry {
  id               String   @id @default(cuid())
  driverId         String
  requestId        String?
  deliveryRequestId String?
  lat              Float
  lng              Float
  speedMps         Float?
  heading          Float?
  accuracy         Float?
  altitude         Float?
  batteryLevel     Float?
  batteryCharging  Boolean?
  recordedAt       DateTime @default(now())

  driver           DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId, recordedAt])
  @@index([requestId])
  @@index([deliveryRequestId])
}
